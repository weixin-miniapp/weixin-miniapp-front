<!--pages/main/main.wxml-->
<view class="page-body">
  <view class="page-section tc">
    <live-player id="player" src="https://domain/pull_stream" mode="RTC" autoplay bindstatechange="statechange" binderror="error">


<cover-view class="cover-view" wx:if="{{showModalStatus}}">
        <!--问题弹窗-->
        <cover-view class="drawer-box">
          <cover-view class="drawer_title">课堂提问</cover-view>
          
          <radio-group class="group" bindchange="radioChange">
            <cover-view class="label-2" wx:for="{{list}}">
              <radio id="{{item.questionId}}" hidden value="{{item.questionId}}"checked="{{item.checked}}"></radio>
              <cover-view class="icon">
                <cover-view class="icon-checked" style="opacity:{{item.checked ? 1: 0}}"></cover-view>
              </cover-view>
              <label class="label-2-text" for="{{item.questionId}}">
                <text>{{item.content}}</text>
              </label>
            </cover-view>
          </radio-group>

          <button bindtap="sendQuestions" size="mini" class="buttonModal" type="default">发送问题</button>
          <button bindtap="sendAnswer" size="mini" class="buttonModal" type="primary">发送答案</button>
          <button bindtap="closeQuestion" size="mini" class="buttonModal" type="primary">关闭弹窗</button>

        </cover-view>
      </cover-view>


    </live-player>


  


    <view class="btn-area">
      <button bindtap="bindPlay" class="page-body-button" type="primary">播放</button>
      <button bindtap="bindPause" class="page-body-button" type="primary">暂停</button>
      <button bindtap="bindStop" class="page-body-button" type="primary">停止</button>
      <button bindtap="bindResume" class="page-body-button" type="primary">恢复</button>
      <button bindtap="bindMute" class="page-body-button" type="primary">静音</button>
    </view>
  </view>
</view>